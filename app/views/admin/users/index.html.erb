<div class="row">
  <div class="col-md-10 col-offset-2">
    <h2><%= t "admin.user.list_user" %></h2>
    <table class="table table-striped table-hover">
      <thead>
        <th><%= t "admin.user.email" %></th>
        <th><%= t "admin.user.delete" %></th>
      </thead>
      <tbody>
        <% @users.each do |user| %>
          <tr>
            <td><%= link_to user.email, [:admin, user] %></td>
            <td class="td_style"><%= link_to t("admin.user.destroy_user"), admin_user_path(user),
              method: :delete, data: {confirm: t("admin.user.sure")} %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
