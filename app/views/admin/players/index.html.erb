<div class="row">
  <div class="col-md-10 col-offset-2">
    <h2><%= t "admin.player.list_player" %></h2>
    <table class="table table-striped table-hover">
      <thead>
        <th><%= t "admin.player.name" %></th>
        <th><%= t "admin.player.date_of_birth" %></th>
        <th><%= t "admin.player.position" %></th>
        <th><%= t "admin.player.jersey_number" %></th>
        <th><%= t "admin.player.nationality" %></th>
        <th><%= t "admin.player.team" %></th>
        <th><%= t "admin.player.update" %></th>
        <th><%= t "admin.player.delete" %></th>
      </thead>
      <tbody>
        <% @players.each do |player| %>
          <tr>
            <td><%= player.name %></td>
            <td><%= player.date_of_birth %></td>
            <td><%= player.position %></td>
            <td><%= player.jersey_number %></td>
            <td><%= player.nationality %></td>
            <td><%= player.team.name %></td>
            <td>
              <%= link_to [:edit, :admin, player], class: "btn btn-primary btn-xs" do %>
                <span class="glyphicon glyphicon-eye-open"></span> 
                <%= t "admin.player.edit_player" %>
              <% end %>
            </td>
            <td>
              <%= link_to [:admin, player], method: :delete, data: {confirm: t("admin.player.sure")},
                class: "btn btn-primary btn-xs" do %>
                <span class="glyphicon glyphicon-eye-open"></span> <%= t "admin.player.destroy" %>
              <% end %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
    <%= link_to new_admin_player_path, class: "btn btn-primary btn-xs" do %>
      <span class="glyphicon glyphicon-eye-open"></span> <%= t "admin.player.new_player" %>
    <% end %>
  </div>
</div>
