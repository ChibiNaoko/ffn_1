 <%= form_for [:admin, @post] do |f| %>
  <%= render "shared/error_messages", object: @post %>

  <%= f.label :title %>
  <%= f.text_field :title, class: "form-control" %>

  <%= f.label :content %>
  <%= f.text_field :content, class: "form-control" %>

  <%= f.label :image %>
  <%= f.file_field :image, accept: "image/jpeg, image/gif, image/png" %>

  <%= f.label :season %>
  <%= f.select :season_id, @seasons.collect {|season| [season.name, season.id]},
    {include_blank: false}, {class: "form-control"} %>

  <%= f.label :match %>
  <%= f.select :match_id, @matches.collect {|match| [match.name, match.id]},
    {include_blank: false}, {class: "form-control"} %>

  <%= f.submit t("admin.post.create_post"), class: "btn btn-info form-button" %>
<% end %>
