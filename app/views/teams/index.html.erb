<div class="row">
  <div class="col-md-10 col-offset-2">
    <h2><%= t "user.team.list_team" %></h2>
    <table class="table table-striped table-hover table-style">
      <thead>
        <th class="th-style"><p><%= t "user.team.name" %></p></th>
        <th class="th-style"><p><%= t "user.team.logo" %></p></th>
        <th class="th-style"><p><%= t "user.team.coach" %></p></th>
        <th class="th-style"><p><%= t "user.team.country" %></p></th>
      </thead>
      <tbody>
        <% @teams.each do |team| %>
          <tr>
            <td class="td_style"><%= link_to team.name, team_path(team) %></td>
            <td class="td_style"><%= image_tag team.logo.url if team.logo? %></td>
            <td class="td_style"><%= team.coach %></td>
            <td class="td_style"><%= team.country %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
